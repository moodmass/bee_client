<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hyzc.bee.client.layout.store.StoreSelectActivity">

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_height">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar">
            </android.support.v7.widget.Toolbar>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp">
                <net.steamcrafted.materialiconlib.MaterialIconView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    app:materialIcon="arrow_left"
                    app:materialIconColor="@color/head_icon_color"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@color/transparent"
                    android:id="@+id/back"
                    />
                <TextView
                    android:id="@+id/store_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="@string/store_select"
                    android:textColor="@color/head_text_color"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="店铺选择" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
